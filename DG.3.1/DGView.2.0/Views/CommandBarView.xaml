    <Grid Background="{Binding ElementName=Root, Path=Background, Converter={x:Static common:ColorHslBrush.Instance}, ConverterParameter=+10%}">
        <WrapPanel x:Name="CommandBar" Height="28">
            <Button Focusable="False" BorderThickness="0" Padding="4" ToolTip="Edit setting"
                    effects:ChromeEffect.Monochrome="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Background, Converter={x:Static common:ColorHslBrush.Instance}}"
                    effects:IconEffect.Geometry="{StaticResource SettingsGeometry}"/>

            <ToggleButton Focusable="False" BorderThickness="0" Padding="4" ToolTip="Select setting"
                          Style="{StaticResource MonochromeDropDownButtonStyle}" 
                          effects:ChromeEffect.Monochrome="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Background, Converter={x:Static common:ColorHslBrush.Instance}}"
                          effects:IconEffect.Geometry="{StaticResource SelectGeometry}">
                <ToggleButton.Resources>
                    <ContextMenu x:Key="Items" StaysOpen="False" Placement="Bottom"/>
                </ToggleButton.Resources>
            </ToggleButton>

            <Button Focusable="False" BorderThickness="0" Padding="4" ToolTip="Save setting"
                    effects:ChromeEffect.Monochrome="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Background, Converter={x:Static common:ColorHslBrush.Instance}}"
                    effects:IconEffect.Geometry="{StaticResource SaveGeometry}"/>

            <Separator Style="{DynamicResource SeparatorOfButtonBarsStyle}"/>

            <ToggleButton Focusable="False" BorderThickness="0" Padding="3" ToolTip="Show/Hide grid lines"
                          IsChecked="{Binding DGControl.GridLinesVisibility, Converter={x:Static common:GridLinesVisibilityConverter.Instance}, Mode=TwoWay}"
                          effects:ChromeEffect.Monochrome="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Background, Converter={x:Static common:ColorHslBrush.Instance}}"
                          effects:DoubleIconToggleButtonEffect.GeometryOff="{Binding Source={StaticResource GridOnPath}, Path=Data}"
                          effects:DoubleIconToggleButtonEffect.GeometryOn="{Binding Source={StaticResource GridOffPath}, Path=Data}"/>

            <Button Focusable="False" BorderThickness="0" Padding="4" ToolTip="Select font"
                    effects:ChromeEffect.Monochrome="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Background, Converter={x:Static common:ColorHslBrush.Instance}}"
                    effects:IconEffect.Geometry="{StaticResource FontGeometry}"/>

            <Separator Style="{DynamicResource SeparatorOfButtonBarsStyle}"/>

            <ToggleButton Focusable="False" Padding="4" ToolTip="Row display mode"
                          Style="{StaticResource MonochromeDropDownButtonStyle}" 
                          effects:ChromeEffect.Monochrome="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Background, Converter={x:Static common:ColorHslBrush.Instance}}">
                <ToggleButton.Resources>
                    <ContextMenu x:Key="Items" StaysOpen="False" Placement="Bottom">
                        <MenuItem Header="Не встановлено"></MenuItem>
                        <MenuItem Header="1 рядок"></MenuItem>
                        <MenuItem Header="Переніс слів"></MenuItem>
                    </ContextMenu>
                </ToggleButton.Resources>
            </ToggleButton>

            <Separator Style="{DynamicResource SeparatorOfButtonBarsStyle}"/>

            <ToggleButton Focusable="False" Padding="4" ToolTip="Group level"
                          Style="{StaticResource MonochromeDropDownButtonStyle}" 
                          effects:ChromeEffect.Monochrome="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Background, Converter={x:Static common:ColorHslBrush.Instance}}"
                          effects:IconEffect.Geometry="{StaticResource LayerGeometry}">
                <ToggleButton.Resources>
                    <ContextMenu x:Key="Items" StaysOpen="False" Placement="Bottom">
                    </ContextMenu>
                </ToggleButton.Resources>
            </ToggleButton>

            <Separator Style="{DynamicResource SeparatorOfButtonBarsStyle}"/>
            <!-- Sorting icons -->
            <Button Focusable="False" Padding="4" ToolTip="Sort in ascending order" BorderThickness="0"
                    effects:ChromeEffect.Monochrome="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Background, Converter={x:Static common:ColorHslBrush.Instance}}"
                    effects:IconEffect.Geometry="{StaticResource SortAscGeometry}"/>

            <Button Focusable="False" Padding="4" ToolTip="Sort in descending order" BorderThickness="0"
                    effects:ChromeEffect.Monochrome="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Background, Converter={x:Static common:ColorHslBrush.Instance}}"
                    effects:IconEffect.Geometry="{StaticResource SortDescGeometry}"/>
            <Button Focusable="False" Padding="0" ToolTip="Remove sorting" BorderThickness="0"
                    Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                    effects:ChromeEffect.Monochrome="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Background, Converter={x:Static common:ColorHslBrush.Instance}}">
                <Grid>
                    <Viewbox Margin="-12 0 0 0" HorizontalAlignment="Left">
                        <Path Data="{StaticResource SortOffGeometry}"/>
                    </Viewbox>
                    <Viewbox Width="10" Margin="12 0 0 2" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                        <Path Data="{StaticResource ClearGeometry}"/>
                    </Viewbox>
                </Grid>
            </Button>

            <Separator Style="{DynamicResource SeparatorOfButtonBarsStyle}"/>
            <!-- Filters -->
            <Button Focusable="False" Padding="0" ToolTip="Filter by cell value" BorderThickness="0"
                    effects:ChromeEffect.Monochrome="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Background, Converter={x:Static common:ColorHslBrush.Instance}}"
                    effects:IconEffect.Geometry="{StaticResource FilterGeometry}"
                    effects:IconEffect.Margin="4"/>
            <Button Focusable="False" Padding="0" ToolTip="Remove filter by cell value" BorderThickness="0"
                    Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                    effects:ChromeEffect.Monochrome="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Background, Converter={x:Static common:ColorHslBrush.Instance}}">
                <Grid>
                    <Viewbox Margin="2 4 6 4">
                        <Path Data="{StaticResource FilterGeometry}"/>
                    </Viewbox>
                    <Viewbox Width="10" Margin="0 0 2 2" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                        <Path Data="{StaticResource ClearGeometry}"/>
                    </Viewbox>
                </Grid>
            </Button>

            <Separator Style="{DynamicResource SeparatorOfButtonBarsStyle}"/>

            <TextBox Margin="0 2" Width="100" ToolTip="Quick text filter" TextChanged="Do_FastFilter"/>

            <Button Focusable="False" Padding="6" ToolTip="Search and replace text" BorderThickness="0"
                    effects:ChromeEffect.Monochrome="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Background, Converter={x:Static common:ColorHslBrush.Instance}}"
                    effects:IconEffect.Geometry="{StaticResource SearchGeometry}"/>

            <Separator Style="{DynamicResource SeparatorOfButtonBarsStyle}"/>

            <Button Focusable="False" Padding="6" ToolTip="Print" BorderThickness="0"
                    effects:ChromeEffect.Monochrome="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Background, Converter={x:Static common:ColorHslBrush.Instance}}"
                    effects:IconEffect.Geometry="{StaticResource PrinterGeometry}"/>

            <Button Focusable="False" Padding="6" ToolTip="Clone" BorderThickness="0"
                    effects:ChromeEffect.Monochrome="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Background, Converter={x:Static common:ColorHslBrush.Instance}}"
                    effects:IconEffect.Geometry="{StaticResource CloneGeometry}"/>

            <Button Focusable="False" Padding="6" ToolTip="Reload data" BorderThickness="0"
                    effects:ChromeEffect.Monochrome="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Background, Converter={x:Static common:ColorHslBrush.Instance}}"
                    effects:IconEffect.Geometry="{StaticResource RefreshGeometry}"/>

            <Button Focusable="False" Padding="6" ToolTip="Export data to temporary Excel file open it" BorderThickness="0"
                    effects:ChromeEffect.Monochrome="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Background, Converter={x:Static common:ColorHslBrush.Instance}}"
                    effects:IconEffect.Geometry="{StaticResource ExcelGeometry}"/>

            <Button Focusable="False" Padding="6" ToolTip="Export data to temporary Text file open it" BorderThickness="0"
                    effects:ChromeEffect.Monochrome="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Background, Converter={x:Static common:ColorHslBrush.Instance}}"
                    effects:IconEffect.Geometry="{StaticResource TxtFileGeometry}"/>

        </WrapPanel>
        </Grid>
</UserControl>
