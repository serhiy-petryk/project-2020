<Window x:Class="ControlTests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlTests"
        xmlns:effects="clr-namespace:WpfSpLib.Effects;assembly=WpfSpLib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Slider Grid.Column="0"
                x:Name="uiScaleSlider"
                Focusable="False"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                ToolTip="Determines the UI scale factor. Double-click to revert scaling back to 100%."
                Height="100"
                Value="1" Minimum="0.5" Maximum="4"
                Orientation="Vertical"
                Ticks="1"
                IsSnapToTickEnabled="False"
                TickPlacement="BottomRight"
                AutoToolTipPlacement="BottomRight"
                AutoToolTipPrecision="2"/>

        <Grid Grid.Column="1">
            <Grid.LayoutTransform>
                <ScaleTransform CenterX="0" CenterY="0" ScaleX="{Binding ElementName=uiScaleSlider,Path=Value}" ScaleY="{Binding ElementName=uiScaleSlider,Path=Value}"/>
            </Grid.LayoutTransform>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Vertical" Width="200" Margin="10">
                <ComboBox Margin="5" Height="40" Padding="8 8 0 8" MaxDropDownHeight="100"
                          Style="{StaticResource SimpleComboBox}" BorderThickness="3"
                          effects:ChromeEffect.Monochrome="#FFFBFCFE"
                          effects:CornerRadiusEffect.CornerRadius="8">
                    <ComboBoxItem IsSelected="True">
                        <TextBlock >LG Nexus 5X</TextBlock>
                    </ComboBoxItem>
                    <TextBlock>Huawai Nexus 6P Huawai Nexus 6P</TextBlock>
                    <ComboBoxItem IsEnabled="False" >
                        <TextBlock>iPhone 6S</TextBlock>
                    </ComboBoxItem>
                    <TextBlock>iPhone 6S Plus</TextBlock>
                    <TextBlock>Microsoft Lumia 950</TextBlock>
                    <TextBlock>iPhone 6S Plus</TextBlock>
                    <TextBlock>Microsoft Lumia 950</TextBlock>
                    <TextBlock>iPhone 6S Plus</TextBlock>
                    <TextBlock>Microsoft Lumia 950</TextBlock>
                </ComboBox>

                <ComboBox Margin="5" Height="40" Padding="8 8 0 8" MaxDropDownHeight="600"
                          Style="{StaticResource SimpleComboBox}" BorderThickness="3"
                          effects:ChromeEffect.Monochrome="GreenYellow"
                          effects:CornerRadiusEffect.CornerRadius="8"
                          ToolTip="No selected, 3-d item is disabled">
                    <TextBlock >LG Nexus 5X</TextBlock>
                    <TextBlock>Huawai Nexus 6P Huawai Nexus 6P</TextBlock>
                    <ComboBoxItem IsEnabled="False" >
                        <TextBlock>iPhone 6S</TextBlock>
                    </ComboBoxItem>
                    <TextBlock>iPhone 6S Plus</TextBlock>
                    <TextBlock>Microsoft Lumia 950</TextBlock>
                    <TextBlock>iPhone 6S Plus</TextBlock>
                    <TextBlock>Microsoft Lumia 950</TextBlock>
                    <TextBlock>iPhone 6S Plus</TextBlock>
                    <TextBlock>Microsoft Lumia 950</TextBlock>
                </ComboBox>

                <ComboBox Margin="5" Style="{StaticResource SimpleComboBox}" BorderThickness="3" effects:ChromeEffect.Monochrome="Black">
                    <ComboBoxItem IsSelected="True">
                        <TextBlock >LG Nexus 5X</TextBlock>
                    </ComboBoxItem>
                    <TextBlock>Huawai Nexus 6P</TextBlock>
                    <TextBlock>iPhone 6S</TextBlock>
                    <TextBlock>iPhone 6S Plus</TextBlock>
                    <TextBlock>Microsoft Lumia 950</TextBlock>
                </ComboBox>

                <ComboBox Margin="5" Style="{StaticResource SimpleComboBox}" BorderThickness="3">
                    <ComboBoxItem IsSelected="True">
                        <TextBlock >LG Nexus 5X</TextBlock>
                    </ComboBoxItem>
                    <TextBlock>Huawai Nexus 6P</TextBlock>
                    <TextBlock>iPhone 6S</TextBlock>
                    <TextBlock>iPhone 6S Plus</TextBlock>
                    <TextBlock>Microsoft Lumia 950</TextBlock>
                </ComboBox>

                <ComboBox Margin="5" Name="phonesList2" VerticalAlignment="Top">
                    <ComboBoxItem IsSelected="True">
                        <TextBlock >LG Nexus 5X</TextBlock>
                    </ComboBoxItem>
                    <TextBlock>Huawai Nexus 6P</TextBlock>
                    <TextBlock>iPhone 6S</TextBlock>
                    <TextBlock>iPhone 6S Plus</TextBlock>
                    <TextBlock>Microsoft Lumia 950</TextBlock>
                </ComboBox>
                <ComboBox Width="150" HorizontalAlignment="Left">
                    <ComboBoxItem Padding="2" IsSelected="True" Content="Default"/>
                    <ComboBoxItem Padding="2" Content="Editable"/>
                    <ComboBoxItem Padding="2" Content="Disabled"/>
                </ComboBox>

                <Border Margin="5" BorderThickness="2" BorderBrush="Red" HorizontalAlignment="Left" VerticalAlignment="Top"
                        Width="68" Height="68">
                    <Viewbox Width="64" Height="64">
                        <Path Stretch="Uniform" Fill="Aqua"
                              Data="M0 0 Z M12 12 ZM4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                    </Viewbox>
                </Border>
                <Border Margin="5" BorderThickness="2" BorderBrush="Red" HorizontalAlignment="Left" VerticalAlignment="Top"
                        Width="68" Height="68">
                    <Viewbox Width="64" Height="64">
                        <Path Stretch="Uniform" Fill="Aqua"
                              Data="M0 0 Z M16 16Z M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                    </Viewbox>
                </Border>
                <Border Margin="5" BorderThickness="2" BorderBrush="Red" HorizontalAlignment="Left" VerticalAlignment="Top"
                        Width="68" Height="68">
                    <Viewbox Width="64" Height="64">
                        <Path Stretch="Uniform" Fill="Aqua"
                              Data="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                    </Viewbox>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Vertical" Width="200" Margin="10">
                <ComboBox Margin="5" VerticalAlignment="Top">
                    <ComboBoxItem IsSelected="True">
                        <TextBlock >LG Nexus 5X</TextBlock>
                    </ComboBoxItem>
                    <TextBlock>Huawai Nexus 6P</TextBlock>
                    <TextBlock>iPhone 6S</TextBlock>
                    <TextBlock>iPhone 6S Plus</TextBlock>
                    <TextBlock>Microsoft Lumia 950</TextBlock>
                </ComboBox>

                <ComboBox Margin="5" VerticalAlignment="Top">
                    <ComboBoxItem IsSelected="True">
                        <TextBlock >LG Nexus 5X</TextBlock>
                    </ComboBoxItem>
                    <TextBlock>Huawai Nexus 6P</TextBlock>
                    <TextBlock>iPhone 6S</TextBlock>
                    <TextBlock>iPhone 6S Plus</TextBlock>
                    <TextBlock>Microsoft Lumia 950</TextBlock>
                </ComboBox>
                <ComboBox Width="150" HorizontalAlignment="Left">
                    <ComboBoxItem Padding="2" IsSelected="True" Content="Default"/>
                    <ComboBoxItem Padding="2" Content="Editable"/>
                    <ComboBoxItem Padding="2" Content="Disabled"/>
                </ComboBox>
            </StackPanel>

        </Grid>
    </Grid>
</Window>
